<%= simple_form_for @blog_post do |form| %>
  <% if @blog_post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@blog_post.errors.count, "error") %> prohibited this blog_post from being saved:</h2>

    <ul>
      <% @blog_post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <% if @blog_post.persisted? %>
      <div class="col-md-12">
        <div class="form-group">
          <u><%= link_to("View on site", blog_post_url(@blog_post), target: "_blank") %></u>
        </div>
      </div>
    <% end %>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :summary %>
        <%= form.text_area :summary, class:"form-control", rows: 4 %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :meta_title %>
        <%= form.text_field :meta_title, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :meta_description %>
        <%= form.text_area :meta_description, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :description %><br>
        Adding an image: '<em>image:image_name</em>'<br>
        The caption: a <em>figcaption</em> tag
        <%= form.text_area :description, class: "form-control", rows: 12 %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :image %>
        (900 x 500 more or less, <100kb)
        <%= form.file_field :image, class:"form-control" %>
      </div>
    </div>

    <div class="col-12">
      <div class="form-group">
        <%= form.label :publish_date %>
        <%= form.date_field :publish_date, class:"form-control" %>
      </div>
    </div>

    <div class="col-md-12">
      <h3>Linked Experiments</h3>
      <div class="form-group">
        <%= form.association :experiments, as: :check_boxes, class: "form-control", wrapper: :horizontal_collection_inline %>
      </div>
    </div>

    <div class="col-md-12">
      <div>
        <%= form.submit "Save blog post", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
