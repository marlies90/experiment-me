<% content_for :meta_title, "Blog #{DEFAULT_META["meta_website"]}" %>
<% content_for :meta_description, "A personal exploration into happiness - inspiring and challenging you to experience life in a more enjoyable way!" %>

<main role="main" class="bg-meaning">
  <section class="container my-4 px-0 overflow-hidden">
    <div class="row">
      <div class="col-12 col-md-9">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0 bg-light">
            <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
            <li class="breadcrumb-item active" aria-current="page"><%= link_to "Blog", blog_posts_path %></li>
          </ol>
        </nav>
        <div class="card">
          <div class="card-body">
            <div class="pb-4">
              <h1 class="text-intense">Experiment.blogs</h1>
            </div>
            <div class="row">
              <% @blog_posts.each do |blog_post| %>
                <div class="col-12 col-sm-4">
                  <img class="card-img" src="<%= rails_blob_url(blog_post.image) if blog_post.image.attached? %>">
                </div>
                <div class="col-12 col-sm-8">
                  <h2 class="h3 text-intense"><%= link_to blog_post.name, blog_post_path(blog_post) %></h2>
                  <p class="mb-1"><em><%= blog_post.created_at.strftime("%e %b %Y") %></em></p>
                  <p><%= blog_post.summary %></p>
                  <%= link_to "Read more", blog_post_path(blog_post), class: "btn btn-primary" %>
                </div>
                <div class="col-12 py-2">
                  <hr>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <%= render "about" %>
    </div>
  </section>
</main>
