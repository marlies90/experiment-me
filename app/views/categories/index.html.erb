<p id="notice"><%= notice %></p>

<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Choose a category</h1>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
              <%= image_tag category.image if category.image.attached? %>
              <div class="card-body">
                <h3><%= category.name %></h3>
                <p class="card-text"><%= category.description %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'View', category_show_path(category), class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
