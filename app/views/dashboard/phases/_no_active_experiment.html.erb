<div class="row px-sm-4 dashboard-detail">
  <div class="col-sm-8 mb-sm-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">You're in phase 1: <span class="text-intense text-brand">experiment preparation</span></h5>
      </div>
      <div class="row card-body pb-sm-0">
        <div class="col-12 mb-4">
          You haven't started an experiment yet. What do you want to do?
        </div>
        <div class="col-lg-6 mb-2 mb-md-2">
          <% if journal_entry_for_date(DateTime.current.beginning_of_day).present? %>
          <div class="card text-center mb-3">
            <div class="card-body card-action card-action-complete">
              <p class="text-health">
                <i class="fas fa-check h2"></i>
              </p>
              <h5 class="text-intense text-muted mb-4">You've added your observation for today.</h5>
              <span class="btn btn-primary disabled"> Add observation</span>
            </div>
          </div>
          <% else %>
          <a href="<%= journal_entries_path %>">
            <div class="card text-center mb-3">
              <div class="card-body card-action">
                <p class="icon">
                  <i class="fas fa-eye h2"></i>
                </p>
                <h5 class="text-intense mb-4">I want to keep track of how I'm feeling.</h5>
                <span class="btn btn-primary"> Add observation</span>
              </div>
            </div>
          </a>
          <% end %>
        </div>
        <div class="col-lg-6 mb-2 mb-md-2">
          <a href="<%= categories_path %>">
            <div class="card text-center mb-3">
              <div class="card-body card-action">
                <p class="icon">
                  <i class="fas fa-vial h2"></i>
                </p>
                <h5 class="text-intense mb-4">I'm ready to start a new experiment!</h5>
                <span class="btn btn-primary"> Find experiment</span>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-4 mb-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Experiment phases</h5>
      </div>
      <div class="card-body">
        <p><i class="far fa-square mr-2"></i><span class="text-intense text-brand"> 1. Prepare</span></p>
        <p><i class="far fa-square mr-2"></i> 2. Observe</p>
        <p><i class="far fa-square mr-2"></i> 3. Analyze & express</p>
      </div>
    </div>
  </div>
</div>
