<div class="form-group nested-fields">
  <div class="row">
    <div id="resource_name" class="col">
      <%= f.label :name %>
      <%= f.text_area :name, class: "form-control" %>
    </div>
    <div id="resource_source" class="col">
      <%= f.label :source %>
      <%= f.text_area :source, class: "form-control" %>
    </div>
    <%= link_to_remove_association "Remove resource", f %>
  </div>
</div>
