      <div class="card mb-2">
        <div class="card-header">
          <h1 class="text-intense h2">New journal entry for <span class="text-brand"><%= date.to_s(:journal_date) %></span></h1>
        </div>

        <%= render "journal_entries/form", journal_entry: @journal_entry %>
      </div>
    </main>
  </div>
</div>
