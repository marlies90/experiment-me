<% content_for :meta_title, "Edit observation - Experiment.rocks" %>

<div class="container-fluid dashboard pb">
  <div class="row full-height">
    <%= render "dashboard/sidebar_nav" %>

    <main role="main" class="col-md-9 col-lg-10 ml-sm-auto px-0 bg-light overflow-hidden">
      <section>
        <div class="jumbotron rounded-0 bg-brand text-white dashboard-header">
          <div class="px-2 px-sm-4">
            <h1 class="jumbotron-heading text-intense">Edit your observation</h1>
            <p class="lead">For <%= date.to_s(:journal_date) %></p>
          </div>
        </div>
      </section>

      <section>
        <%= render "observations/form", observation: @observation %>
      </section>
    </main>
  </div>
</div>
