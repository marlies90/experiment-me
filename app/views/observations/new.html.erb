<% content_for :meta_title, "New observation - Experiment.rocks" %>

<main class="container-fluid dashboard pb">
  <div class="row h-100">
    <%= render "dashboard/sidebar_nav" %>

    <div class="col-md-9 col-lg-10 ml-sm-auto px-0 bg-light overflow-hidden">
      <section>
        <div class="jumbotron rounded-0 bg-brand text-white dashboard-header">
          <div class="px-2 px-sm-4">
            <h1 class="jumbotron-heading text-intense">New Observation</h1>
            <p class="lead">For <%= date.to_s(:journal_date) %></p>
          </div>
        </div>
      </section>

      <section>
        <%= render "observations/form", observation: @observation %>
      </section>
    </div>
  </div>
</main>
