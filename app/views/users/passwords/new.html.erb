<% content_for :robots, "noindex,follow" %>
<% content_for :meta_title, "Reset password #{DEFAULT_META["meta_website"]}" %>

<main class="focus-form bg-meaning">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4 form rounded">
        <h2 class="text-intense">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form_group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form_group pt-3">
          <%= f.submit "Reset my password", class: "btn btn-primary" %>
        </div>
        <% end %>

        <div class="pt-4">
          <u><%= render "devise/shared/links" %></u>
        </div>
      </div>
    </div>
  </div>
</main>
